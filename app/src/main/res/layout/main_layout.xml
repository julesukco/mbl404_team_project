<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jfrankum.week4.Main">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Clinic Search"
        android:id="@+id/txtTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Clinic Name :"
        android:id="@+id/txtNameLabel"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:layout_below="@+id/txtNameLabel"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnNameSearch"
        android:text="Clinic"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find by Name"
        android:id="@+id/btnNameSearch"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btnZipSearch"
        android:layout_below="@+id/txtNameLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Clinic ZIP Code:"
        android:id="@+id/txtZipLabel"
        android:layout_below="@+id/txtName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtZip"
        android:layout_below="@+id/txtZipLabel"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnZipSearch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find by Location"
        android:id="@+id/btnZipSearch"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtZipLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Operation Status :"
        android:id="@+id/txtStatusLabel"
        android:layout_below="@+id/txtZipLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtStatus"
        android:layout_below="@+id/txtStatusLabel"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnStatusSearch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find by Status"
        android:id="@+id/btnStatusSearch"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtStatusLabel" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Searches"
        android:id="@+id/btnSavedSearches"
        android:layout_below="@+id/txtStatusLabel"
        android:layout_marginTop="70dp"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
